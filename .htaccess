<IfModule !mod_rewrite.c>
    deny from all
</IfModule>

<IfModule mod_rewrite.c>

    RewriteEngine on
    RewriteCond %{REQUEST_URI} /$
    RewriteRule ^ %{REQUEST_URI}index.php [L,R=301]

    RewriteCond %{REQUEST_URI} $
    RewriteRule ^(.*)$ public/$1 [L,QSA]

</IfModule>

